# Configuration TSE Catalogue

# Base URL de l'application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# MySQL Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/tse_catalogue"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# AWS S3 Configuration (ou compatible)
S3_BUCKET_NAME=tse-catalogue
S3_REGION=eu-west-1
S3_ACCESS_KEY_ID=your_access_key_id
S3_SECRET_ACCESS_KEY=your_secret_access_key
S3_ENDPOINT=https://s3.eu-west-1.amazonaws.com
S3_BASE_URL=https://tse-catalogue.s3.eu-west-1.amazonaws.com

# Legacy Supabase Configuration (pour la migration)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Upload Configuration
# NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB
# NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
# NEXT_PUBLIC_ALLOWED_DOCUMENT_TYPES=application/pdf

# Email Configuration (pour notifications)
